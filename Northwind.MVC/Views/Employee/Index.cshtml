
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover" id="employeeTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody id="employeeBody">

            </tbody>
        </table>
    </div>
    <div class="col-md-12 d-none" id="employeeCard"> 
        <div class="card">
            <div class="card-body">
                <h1 id="employeeFullName"></h1>
                <p class="lead">Toplam <strong id="employeeTotalSaleCount"></strong> adet satış yapmıştır.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="/js/employee.js"></script>
}

